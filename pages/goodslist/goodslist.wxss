image{
  width: 100%;
  position: relative; 
 
}

form{
    position: absolute;  
   width: 80%; 
    top: 30rpx;
   display: inline-block;
   height: auto;
   left: 10%;
     
}
input{
  background-color: rgba(246, 248, 249, 0.5);  
  border-radius: 30rpx;
  font-size: 30rpx;
  height: 2rem;
}
.goods{
  display: inline-block;
  width: 49.8%;
  height: 360rpx;
  background-color: #fff;
  margin-top: 0.2%;
  margin-right: 0.2%;
}

.goods-pic{
  width: 80%;
  height: 250rpx;
}
.price{
  width: 80%;
  height: 100rpx;
  margin-left: 10%;
}
.price p{
  width: 80%;
  display: block;
  text-align: left;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.goods-name{
  font-size: 25rpx;
  font-weight: 700;
  color: #585757;
}
.goods-price{
  font-size: 21rpx;
  font-weight: 700;
  color: #ea7c0e;
}
.goods-lower{
  font-size: 18rpx;
  color: #676565;
}